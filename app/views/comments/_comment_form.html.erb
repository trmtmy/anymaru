<%= render "layouts/errors", post: @comment %>


    <%= form_with model: [post, comment], local: false , class: "form-inline" do |f| %>
  <div class="container">
    <div class="mx-auto align-items-center form-group row">
      <div class=" col-8 col-md-5 offset-md-3">
        <%= f.text_area :comment, class: "comment_form", placeholder: "コメントを追加" %>
      </div>

      <div class ="col-auto col-md-4">
        <%= f.submit "送信", class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>

  <% end %>

