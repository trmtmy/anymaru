<%= render "layouts/errors", post: @comment %>


    <%= form_with model: [post, comment], local: false , class: "form-inline" do |f| %>
  <div class = "d-flex mx-auto ">
    <div class="form-group row">
      <div class="col-7 col-md-10">
        <%= f.text_area :comment, size:'40' ,placeholder: "コメントを追加" %>
      </div>
    </div>

    <div class="form-group row">
      <div class ="col ml-1 mt-3">
        <%= f.submit "送信", class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
  <% end %>

