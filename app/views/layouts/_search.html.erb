<div class="search_form">
    <%= form_with url: category_search_path, local: true, method: :get do |f| %>
    <%= f.select :category, options_for_select([['捜索中','0'],['お迎え希望','1'],['保護中','2'],['その他','3']], options = {selected: params[:category]}) %>
    <%= button_tag type: "submit", class: "btn btn-default" do %>
      <div class = "search-icon">
        <i class="fa-solid fa-magnifying-glass"></i>
      </div>
    <% end %>
  <% end %>

      <br>
  <div class = "search_form-space">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, size:'10' %>
    <%= f.select :range, options_for_select([['ユーザー','Customer'], ['投稿','Post']]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"],["部分一致","partial_match"]]) %>
    <%= button_tag type: "submit", class: "btn btn-default" do %>
      <div class = "search-icon">
        <i class="fa-solid fa-magnifying-glass"></i>
      </div>
    <% end %>
  <% end %>
  </div>



</div>

