<%= render "layouts/errors", post: @post %>
<div class = "post">
      <%= form_with model: @post,url: public_posts_path, method: :post, local: true do |f| %>



          <%= f.label :post_images, "投稿画像" %><br>
          <%= f.file_field :post_images, id:"item-image",multiple: true, onchange: "loadImage(this);" %>
          <div id="image-list"></div>
        <div class = "preview-box">
          <div id="post_images" style="display: none;">
            <p id="preview"></p>
            </div>
          </div>

        <br>
          <%= f.label :"投稿文", class: "form-label" %><br>
          <%= f.text_area :introduction,placeholder: "どうかしましたか？", size: '60' , id:"customer-introduction", maxlength: "300" %>
      <div class = "category-flex">
        <p>カテゴリー</p>
          <%= f.radio_button :category, Post.categories.key(0) %>
          <%= f.label :category_searching,Post.categories_i18n[:searching] %>

          <%= f.radio_button :category, Post.categories.key(1) %>
          <%= f.label :category_welcome,Post.categories_i18n[:welcome] %>

          <%= f.radio_button :category, Post.categories.key(2) %>
          <%= f.label :category_protection,Post.categories_i18n[:protection] %>

          <%= f.radio_button :category, Post.categories.key(3) %>
          <%= f.label :category_others,Post.categories_i18n[:others] %>
        <br>
        <%= f.submit '投稿' %>
      <% end %>
    <%= render "loadimage" %>

<br>
    <%= link_to "・初めてお迎えを希望する方へ", homes_notes_path %>
</div>