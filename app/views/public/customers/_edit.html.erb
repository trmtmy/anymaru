
<%= form_with model: @customer,url: public_customer_path, method: :patch do |f| %>
    <table class "table table-bordered">

      <tr>
        <div class="field">
          <td><%= f.label :image, "画像" %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :name, "名前" %></td>
          <td><%= f.text_field :name, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :profile, "プロフィール" %></td>
          <td><%= f.text_area :profile, autofocus: true, size: '40' %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :area, "エリア" %></td>
          <td><%= f.text_field :area, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.text_field :email, autofocus: true %></td>
        </div>
      </tr>
    </table>
    <%= f.submit "変更", class: 'btn btn-info' %>

    <%= link_to public_customer_customers_confirm_path(current_customer.id) do %>
     <button class="btn btn-outline-dark">退会</button>
    <% end %>
<% end %>