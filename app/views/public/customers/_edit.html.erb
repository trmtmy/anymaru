
<%= form_with model: @customer,url: public_customer_path, method: :patch do |f| %>
    <table class "table table-bordered">

      <tr>
        <div class="field">
          <td><%= f.label :"画像" %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"名前" %></td>
          <td><%= f.text_field :name, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"プロフィール" %></td>
          <td><%= f.text_area :profile, autofocus: true, size: '60' %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"エリア" %></td>
          <td><%= f.text_field :area, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.text_field :email, autofocus: true %></td>
        </div>
      </tr>
    </table>
    <%= f.submit "変更" %>
  <%= link_to "退会", public_customer_customers_confirm_path(current_customer.id) %>
<% end %>